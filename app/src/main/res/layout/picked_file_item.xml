<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:background="@color/orange_tint"
    app:cardBackgroundColor="@color/orange_tint"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:padding="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/img1"
            android:id="@+id/selectedImageItem"
            />

        <ImageView
            android:id="@+id/selectedImageItemRemoveButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/round_clear_24"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            app:tint="@color/light_grey"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>